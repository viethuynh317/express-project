extends ../layouts/common
block content
	

	h1 
		span.mr-3 Users
		a.btn.btn-primary(href="/users/create", style="text-decoration: none;") View Create Page
	.d-flex
		form.ml-auto(action="/users/search", method="GET", class="d-flex")
			input(type="text", name="q", class="form-control")
			button(class="btn btn-primary") Search
	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Actions
		each user in users
			tr
				td
					img(src=user.avatar, style="height: 30px;")
				td= user.name
				td= user.phone
				td 
					a.btn.btn-light(href="/users/" + user.id) view